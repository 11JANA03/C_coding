#include "stdio.h"
int main()
{
    //输出前七行
	for(int i=1;i<=7;i++)
	{
	    //输出每一行的空格
		for(int k=0;k<=7-i ;k++)
		{
			printf(" ");
		}
		//输出每一行的*
		for(int j=0;j<2*i-1;j++)
		{//每一行*的个数都等于行数乘2-1
			printf("*");
		}
		printf("\n");
	}
	//输出后六行
	for(int i=6;i>=1;i--)
	{
		for(int k=0;k<=7-i ;k++)
		{
			printf(" ");
		}
		for(int j=0;j<2*i-1;j++)
		{
			printf("*");
		}
		printf("\n");
	}
}
